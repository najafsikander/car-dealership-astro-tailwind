      <!-- Column 1 -->
      <div class="relative w-full h-2/3 group">
        <!-- Image with overlay hover effect -->
        <div class="relative overflow-hidden">
          <!-- Actual image -->
          <Image
            src="/imgs/news/news1.jpg"
            alt="news1"
            width={800}
            height={800}
            class="w-full h-auto object-cover"
          />

          <!-- Hover overlay (slides up) -->
          <div
            class="absolute inset-0 bg-gradient-to-t from-custom_dark_blue/80 via-custom_dark_blue/80 to-transparent opacity-0 translate-y-full group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 ease-in-out flex items-center justify-center gap-4"
