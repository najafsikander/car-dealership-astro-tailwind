---
import { Icon } from "astro-icon/components";
import Image from "astro/components/Image.astro";

const reasons: string[] = [
  "30+ Years in Business",
  "Locate Your Dream Car",
  "All Vehicles Area Quality Assured",
  "Low Prices & Big Savings",
];
---

<!-- Main background image and overlay --><!-- Background SVG Image -->
<section
  class="w-full h-[90vh] p-5 bg-custom_dark_blue bg-[url('/imgs/right-curve-flipped.png')] bg-no-repeat bg-cover relative"
>
  <!-- Dark Blue Overlay -->
  <div
    class="bg-custom_dark_blue absolute top-0 left-0 w-full h-full opacity-90"
  >
    <div class="flex items-center justify-center h-full w-full">
      <div class="flex flex-col items-center gap-6">
        <Image
          src="/imgs/car-logo-only.webp"
          alt={"Main logo only"}
          width={100}
          height={100}
        />
        <h1 class="text-white font-extrabold text-5xl">Why Choose Us?</h1>
        <p class="text-gray-300 text-xl w-[60%] text-center mt-3">
          Incididunt labore dolore magna aliqua enim veniam quis nostrud tempor
          tempor adispecing miny exercitation ullamco laboris nisiut aliquip.
        </p>
        <!-- Logos Area -->
        <div class="flex flex-row gap-5 mt-20 justify-center items-center w-[70%]">
          <div class="grid grid-cols-2 grid-rows-2 gap-y-[6vh]">
          {
            reasons.map((reason: string) => (
              <div class="flex flex-row gap-3">

                <div class="flex flex-col justify-center">
                  <Icon
                  name="material-symbols-light:car-repair-outline-sharp"
                  class="text-white text-8xl bg-custom_red rounded-[70%] p-1 base-1"
                />
                </div>
                <div class="text-white flex flex-col justify-center items-start gap-5 w-[80%]">
                  <h1 class="text-3xl font-bold">{reason}</h1>
                  <p class=" text-lg font-light w-[90%]">
                    Incididunt labore dolore magn aliqua enim veniam nostrud
                    exercitation miniys quise ullamco.
                  </p>
                </div>
              </div>
            ))
