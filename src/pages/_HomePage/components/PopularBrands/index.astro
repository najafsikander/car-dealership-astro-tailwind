---
import Image from "astro/components/Image.astro";

const brands = [];
const brandLogos = [
  "/imgs/brands/logo-brand-1.webp",
  "/imgs/brands/logo-brand-2.webp",
  "/imgs/brands/logo-brand-3.webp",
  "/imgs/brands/logo-brand-4.webp",
  "/imgs/brands/logo-brand-5.webp",
  "/imgs/brands/logo-brand-6.webp",
  "/imgs/brands/logo-brand-7.webp",
  "/imgs/brands/logo-brand-8.webp",
];
---

<!-- Main background image and overlay --><!-- Background SVG Image -->
<section
  class="w-full h-[90vh] p-5 bg-custom_dark_blue bg-[url('/imgs/right-curve.svg')] bg-no-repeat bg-cover relative"
>
  <!-- Dark Blue Overlay -->
  <div
    class="bg-custom_dark_blue absolute top-0 left-0 w-full h-full opacity-90"
  >
    <div class="flex items-center justify-center h-full w-full">
      <div class="flex flex-col items-center gap-6">
        <Image
          src="/imgs/car-logo-only.webp"
          alt={"Main logo only"}
          width={100}
          height={100}
        />
        <h1 class="text-white font-extrabold text-5xl">
          Explore Popular Brands
        </h1>
        <p class="text-gray-300 text-xl w-[60%] text-center mt-3">
          Incididunt labore dolore magna aliqua enim veniam quis nostrud tempor
          tempor adispecing miny exercitation ullamco laboris nisiut aliquip.
        </p>
        <!-- Logos Area -->
        <div class="w-full border border-gray-800 bg-gray-800 mt-10">
          <div class="grid grid-cols-4 gap-px">
            {brandLogos.map((logo) => (
              <div class="w-full flex items-center justify-center bg-[#0B1B36] hover:bg-[#0B1B36]/90 transition py-12">
                <Image
                  src={logo}
                  alt="Brand Logo"
                  width={90}
                  height={90}
                  class="object-contain brightness-50 hover:brightness-100 transition-all duration-200"
                  loading="lazy"
                />
              </div>
            ))}

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
