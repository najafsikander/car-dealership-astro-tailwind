---
import InfoArea from "./InfoArea.astro";
import MainHeader from "./MainHeader.astro";
import NewsDisplay from "./NewsDisplay";
const news: string[] = [
    'Mar 1: New car models available',
    'Mar 15: Special discounts on selected models',
    'Mar 31: Free service for the first year',
];
---

<header>
    <!-- First part of the headers -->
    <NewsDisplay news={news} client:load/>
    <!-- Second part of the header -->
    <InfoArea/>
    <!-- Third part of the header -->
     <MainHeader/>
</header>
